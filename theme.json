{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,

  "settings": {
    "color": {
      "custom": false,
      "palette": [
        { "slug": "haru-green", "color": "#00dc8c", "name": "Haru Green" },
        { "slug": "haru-black", "color": "#000000", "name": "Haru Black" },
        { "slug": "haru-back-black", "color": "#1a1a1a", "name": "Haru Back Black" },
        { "slug": "haru-white", "color": "#f9f9f9", "name": "Haru White" },
        { "slug": "haru-gray", "color": "#e7e7e7", "name": "Haru Gray" },
        { "slug": "haru-beige", "color": "#eeece3", "name": "Haru Beige" },
        { "slug": "haru-light-cyan", "color": "#7dffc8", "name": "Haru Light Cyan" },
        { "slug": "haru-light-yellow", "color": "#ffff82", "name": "Haru Light Yellow" },
        { "slug": "haru-light-orange", "color": "#fab95f", "name": "Haru Light Orange" },
        { "slug": "haru-light-pink", "color": "#ffafb4", "name": "Haru Light Pink" }
      ]
    },

    "typography": {
      "fontFamilies": [
        {
          "slug": "noto-sans-jp",
          "name": "Noto Sans JP",
          "fontFamily": "\"Noto Sans JP\", system-ui, sans-serif"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "clamp(13px, 3.5vw, 14px)",
          "name": "小：13-14px"
        },
        {
          "slug": "medium",
          "size": "clamp(15px, 4vw, 16px)",
          "name": "中：15-16px"
        },
        {
          "slug": "large",
          "size": "clamp(17px, 4.5vw, 18px)",
          "name": "大：17-18px"
        }
      ],
      "fontFace": [
        {
          "fontFamily": "Noto Sans JP",
          "fontWeight": "300",
          "src": ["file:./fonts/noto-sans-jp-300.woff2"],
          "fontDisplay": "swap"
        },
        {
          "fontFamily": "Noto Sans JP",
          "fontWeight": "400",
          "src": ["file:./fonts/noto-sans-jp-400.woff2"],
          "fontDisplay": "swap"
        },
        {
          "fontFamily": "Noto Sans JP",
          "fontWeight": "500",
          "src": ["file:./fonts/noto-sans-jp-500.woff2"],
          "fontDisplay": "swap"
        },
        {
          "fontFamily": "Noto Sans JP",
          "fontWeight": "700",
          "src": ["file:./fonts/noto-sans-jp-700.woff2"],
          "fontDisplay": "swap"
        }
      ]
    }
  },

  "styles": {
    "color": {
      "background": "var(--wp--preset--color--haru-green)",
      "text": "var(--wp--preset--color--haru-black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--noto-sans-jp)"
    }
  }
} 