{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,

  "settings": {
    "color": {
      "custom": false,
      "palette": [
        { "slug": "haru-green", "color": "#00e68c", "name": "Haru Green" },
        { "slug": "haru-black", "color": "#000000", "name": "Haru Black" },
        { "slug": "haru-back-black", "color": "#1a1a1a", "name": "Haru Back Black" },
        { "slug": "haru-white", "color": "#f9f9f9", "name": "Haru White" },
        { "slug": "haru-gray", "color": "#e7e7e7", "name": "Haru Gray" },
        { "slug": "haru-light-cyan", "color": "#7dffc8", "name": "Haru Light Cyan" },
        { "slug": "haru-light-yellow", "color": "#ffff82", "name": "Haru Light Yellow" },
        { "slug": "haru-light-orange", "color": "#fab95f", "name": "Haru Light Orange" },
        { "slug": "haru-light-pink", "color": "#ffafb4", "name": "Haru Light Pink" }
      ]
    },

    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"source-han-sans-japanese\", sans-serif",
          "slug": "source-han-sans-japanese",
          "name": "源ノ角ゴシック"
        }
      ]
    }
  },

  "styles": {
    "color": {
      "background": "var(--wp--preset--color--haru-green)",
      "text": "var(--wp--preset--color--black)"
    },
    "elements": {
      "body": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--source-han-sans-japanese)",
          "fontWeight": "400"
        }
      }
    }
  }
} 