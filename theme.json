{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,

  "settings": {
    "color": {
      "custom": true,
      "palette": [
        { "slug": "haru-green", "color": "#00e18c", "name": "Haru Green" },
        { "slug": "black",      "color": "#000000", "name": "Black" },
        { "slug": "white",      "color": "#ffffff", "name": "White" },
        { "slug": "gray",       "color": "#e7e7e7", "name": "Gray" },
        { "slug": "haru-gradient-green", "color": "#7dffc8", "name": "Haru Gradient Green" },
        { "slug": "haru-gradient-yellow", "color": "#ffff82", "name": "Haru Gradient Yellow" },
        { "slug": "haru-gradient-orange", "color": "#fab95f", "name": "Haru Gradient Orange" },
        { "slug": "haru-gradient-pink", "color": "#ffafb4", "name": "Haru Gradient Pink" }
      ]
    },

    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"source-han-sans-japanese\", sans-serif",
          "slug": "source-han-sans-japanese",
          "name": "源ノ角ゴシック"
        }
      ]
    }
  },

  "styles": {
    "color": {
      "background": "var(--wp--preset--color--haru-green)",
      "text": "var(--wp--preset--color--black)"
    },
    "elements": {
      "body": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--source-han-sans-japanese)",
          "fontWeight": "400"
        }
      }
    }
  }
} 